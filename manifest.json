{
  "manifest_version":2,
  "name": "Mobage(モバゲー) for PC",
  "version": "2.13",
  "description": "Mobage(モバゲー)のアプリをPCで遊ぼう！",
  "icons" : {
    "32" : "favicon.ico"
  },
  "background" : {
      "scripts" : ["background.js"]
  },
  "content_scripts" : [
    {
      "matches" : [
        "*://*.mbga.jp/*",
        "*://*.ameba.jp/*"
      ],
      "js" : [
          "build/base.js",
          "build/common.js",
          "build/knights.js",
          "build/bahamut.js",
          "build/imas.js",
          "build/gbf_casino.js",
          "build/gbf_battle.js",
          "build/gbf_auto.js",
          "build/gbf_coop.js",
          "build/gbf_commands.js",
          "build/gbf_multi.js"
      ],
      "css": ["content.css"],
      "run_at" : "document_start"
    }
  ],
  "permissions" : [
    "webRequest",
    "webRequestBlocking",
    "*://*.mbga.jp/*",
    "*://*.ameba.jp/*",
    "https://ssl.google-analytics.com/*"
  ],
  "web_accessible_resources": [
    "imas_images/*.jpg"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "update_url": "http://chrome.2ch.to/update.xml"
}
